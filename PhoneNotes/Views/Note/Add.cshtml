@model DatabasePN.Entities.Note

@{
    ViewBag.Title = "Create new";
    Layout = "_Layout";
}

<h1>Create new</h1>

<form method="post">
    
    <div class="mt-3">
        <label class="form-label">Имя</label>
        <input type="text" class="form-control" asp-for="FirstName"/>
    </div>

    <div class="mt-3">
        <label class="form-label">Фамилия</label>
        <input type="text" class="form-control" asp-for="SecondName"/>
    </div>

    <div class="mt-3">
        <label class="form-label">Отчество</label>
        <input type="text" class="form-control" asp-for="ThirdName"/>
    </div>

    <div class="mt-3">
        <label class="form-label">Телефон</label>
        <input type="text" class="form-control" asp-for="PhoneNumber"/>
    </div>

    <div class="mt-3">
        <label class="form-label">Адресс</label>
        <input type="text" class="form-control" asp-for="Address"/>
    </div>

    <div class="mt-3">
        <label class="form-label">Описание</label>
        <input type="text" class="form-control" asp-for="Description"/>
    </div>

    <div class="mt-3">

        <button
            type="submit"
            class="btn btn-primary"
        >
            Save
        </button>

    </div>

</form>

