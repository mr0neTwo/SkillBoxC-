@model DatabasePN.Entities.Note?

@{
    ViewBag.Title = "Info";
    Layout = "_Layout";
}

<h1>Note info</h1>

@if (Model is null)
{
<p>No note was found with this id</p>
}
else
{
    <table>
        <tbody class="table">
        
        <tr>
            <td>Идентификатор: </td>
            <td>@Model.Id</td>
        </tr>

        <tr>
            <td>Имя: </td>
            <td>@Model.FirstName</td>
        </tr>

        <tr>
            <td>Фамилия: </td>
            <td>@Model.SecondName</td>
        </tr>

        <tr>
            <td>Отчество: </td>
            <td>@Model.ThirdName</td>
        </tr>

        <tr>
            <td>Телефон: </td>
            <td>@Model.PhoneNumber</td>
        </tr>

        <tr>
            <td>Адрес: </td>
            <td>@Model.Address</td>
        </tr>

        <tr>
            <td>Описание: </td>
            <td>@Model.Description</td>
        </tr>
        
        </tbody>
    </table>

    <div class="mt-3">

        <form method="post">
            <button
                type="submit"
                class="btn btn-secondary"
                asp-controller="Note"
                asp-action="Back"
            >
                Back
            </button>
        </form>

    </div>
}

