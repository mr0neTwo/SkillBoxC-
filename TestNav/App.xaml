<Application x:Class="TestNav.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:view="clr-namespace:TestNav.Views"
             >
    <Application.Resources>
         
        <DataTemplate DataType="{x:Type TypeName=viewModel:RedViewModel }">
            <view:TestRed/>
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type TypeName=viewModel:BlueViewModel }">
            <view:TestBlue/>
        </DataTemplate>
        
    </Application.Resources>
</Application>
